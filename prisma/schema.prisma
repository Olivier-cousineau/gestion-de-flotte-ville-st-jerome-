generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Asset {
  id           Int       @id @default(autoincrement())
  uid          String    @unique
  assetId      String
  name         String
  category     String
  make         String?
  model        String?
  year         Int?
  vinSerial    String?
  licensePlate String?
  department   String?
  baseLocation String?
  meterType    String?
  meterValue   Int?
  status       String   @default("active")
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  inspections  Inspection[]
}

model Inspection {
  id         Int      @id @default(autoincrement())
  assetId    Int
  asset      Asset    @relation(fields: [assetId], references: [id])
  meterValue Int?
  checklist  Json
  photos     Json?
  status     String
  createdBy  String
  createdAt  DateTime @default(now())
}